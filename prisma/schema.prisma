generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId()
  username    String     @unique
  email       String     @unique
  firstName   String
  secondName  String
  password    String
  country     String
  state       String
  phoneNumber String
  profilePic  String
  properties  Property[]
}

model Property {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId()
  name          String
  address       String
  owner         User     @relation(fields: [ownerId], references: [id])
  ownerId       String   @db.ObjectId
  title         String
  advertiseType String
  description   String
  area          Float
  amenities     String[]
  numRooms      Int
  numBathrooms  Int
  images        String[]
  price         Float
}
